
<%= form_with model: @card, url: worker_cards_path do |f| %>
  <div class="form-group">
    <%= f.label :day %>
    <%= f.date_field :day, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :worktime, 'Work time' %>
    <%= f.number_field :worktime, step: :any, class: 'form-control'%>
  </div>
  <%= f.submit "Create card", class: 'btn btn-primary', data: { confirm: 'Confirm card creation' } %>
<% end %>
